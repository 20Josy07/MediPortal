rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite a los usuarios leer y escribir solo en su propia colección de pacientes
    match /users/{userId}/patients/{patientId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permite a los usuarios leer y escribir solo en su propia colección de sesiones
    match /users/{userId}/sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permite a los usuarios leer y escribir solo en sus propios documentos
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}